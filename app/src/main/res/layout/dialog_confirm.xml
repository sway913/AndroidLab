<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_0"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            android:visibility="gone"
            tools:text="标题" />

        <ImageView
            android:id="@+id/dialog_content_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/color_7c5dc7"
            android:maxHeight="200dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:maxHeight="200dp"
            android:minHeight="40dp"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14"
            android:visibility="visible"
            tools:text="" />

        <TextView
            android:id="@+id/dialog_message_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            tools:text="" />


        <Button
            android:id="@+id/dialog_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="@string/dialog_confirm"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</android.support.v7.widget.CardView>