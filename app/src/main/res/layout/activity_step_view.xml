<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.blinkdagger.androidLab.UI.activity.TipViewActivity">


    <cn.blinkdagger.androidLab.Widget.HorizontalStepView
        android:id="@+id/step_view"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:selectedTextSize="15sp"
        app:selectedTextColor="@color/common_c7"
        app:textSize="12sp"
        app:textColor="@color/common_c3"
        app:lineColor="#3a3345"
        app:activatedLineColor ="#ffc65f"
        app:lineHeight="2dp"
        app:itemWidth="120dp"
        app:dotColor="#ffc65f"
        app:dotRadius="6dp"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/tipview_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:backgroundTint="@color/common_c7"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_anchor="@id/custom_popup_ll"
        app:layout_anchorGravity="bottom|right"
        app:pressedTranslationZ="12dp"
        app:rippleColor="#a6a6a6" />

</android.support.constraint.ConstraintLayout>
